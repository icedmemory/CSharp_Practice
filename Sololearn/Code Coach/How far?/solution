using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace SoloLearn
{
    class Program
    {
        static void Main(string[] args)
        {
            string letters = Console.ReadLine();

            int house = letters.IndexOf('H');
            int pond = letters.IndexOf('P');

            int blocks = Math.Abs(pond - house) - 1;
            Console.Write(blocks);
        }
    }
} 
